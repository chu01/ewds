{% if 'ethio-button--outline ethio-button--inverse' in modifier %}
  <div class="bg-base-darkest padding-1" style="max-width: fit-content">
{% endif %}

{% if is_demo and 'ethio-button--big' not in modifier %}
    <a href="#" class="ethio-button {{ modifier }}">Default</a>
    <a href="#" class="ethio-button {{ modifier }} ethio-button--hover">Hover</a>
    <a href="#" class="ethio-button {{ modifier }} ethio-button--active">Active</a>
    <a href="#" class="ethio-button {{ modifier }} ethio-focus">Focus</a>
    <a href="#" class="ethio-button {{ modifier }}" aria-disabled="true">aria-disabled</a>
    <a href="#" class="ethio-button {{ modifier }} ethio-button--unstyled">Unstyled button</a>
{% else %}
  <a href="#" class="ethio-button {{ modifier }}">{{ text }}</a>
  {% if is_demo and 'ethio-button--big' in modifier %}
    <a href="#" class="ethio-button {{ modifier }}" aria-disabled="true">aria-disabled</a>
    <a href="#" class="ethio-button {{ modifier }} ethio-button--unstyled">Unstyled button</a>
  {% endif %}
{% endif %}

{% if 'ethio-button--outline ethio-button--inverse' in modifier %}
  </div>
{% endif %}
