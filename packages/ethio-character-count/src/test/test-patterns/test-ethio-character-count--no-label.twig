<form class="ethio-form">
  <div class="ethio-character-count">
    <div class="ethio-form-group">
      <span id="with-hint-input-hint" class="ethio-hint">This is an input with a character counter.</span>
      <input
        class="ethio-input ethio-character-count__field"
        id="with-hint-input"
        maxlength="25"
        name="with-hint-input"
        aria-describedby="with-hint-input-info with-hint-input-hint"
      >
    </div>
    <span id="with-hint-input-info" class="ethio-character-count__message">You can enter up to 25 characters</span>
  </div>
</form>
