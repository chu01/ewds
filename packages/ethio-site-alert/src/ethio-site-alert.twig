<section class="ethio-site-alert {{ modifier }}" aria-label="{{ aria_label }}">
  <div class="ethio-alert">
    <div class="ethio-alert__body">
      {%- if title %}
        <h3 class="ethio-alert__heading">{{ title }}</h3>
      {%- endif %}

      {%- if list %}
        {{ list|raw }}
      {%- endif %}

      {%- if text %}
        <p class="ethio-alert__text">{{ text|raw }}</p>
      {%- endif %}
    </div>
  </div>
</section>

