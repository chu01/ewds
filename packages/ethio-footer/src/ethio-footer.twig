<footer class="ethio-footer {% if modifier %} {{ modifier }} {% endif %}">
  <div class="grid-container ethio-footer__return-to-top">
    <a href="#">{{ footer.return_to_top | default('Return to top') }}</a>
  </div>
  <div class="ethio-footer__primary-section">
    {% block primary %}
      {% include "@components/ethio-footer/src/_includes/ethio-footer-nav-primary.twig" with footer.primary_section.nav %}
    {% endblock %}
  </div>
  <div class="ethio-footer__secondary-section">
    <div class="grid-container">
      {% block secondary %}
        <div class="grid-row grid-gap">
          <div class="ethio-footer__logo grid-row mobile-lg:grid-col-6 mobile-lg:grid-gap-2">
            <div class="mobile-lg:grid-col-auto">
              <img class="ethio-footer__logo-img" src="{{ img_path }}/logo-img.png" alt="">
            </div>
            <div class="mobile-lg:grid-col-auto">
              <p class="ethio-footer__logo-heading">
                {{ footer.secondary_section.agency_name |e }}
              </p>
            </div>
          </div>
          <div class="ethio-footer__contact-links mobile-lg:grid-col-6">
            {% include "@components/ethio-footer/src/_includes/ethio-social-nav.twig" %}
            <p class="ethio-footer__contact-heading">
              {{ footer.secondary_section.heading |e }}
            </p>
            <address class="ethio-footer__address">
              <div class="ethio-footer__contact-info grid-row grid-gap">
                <div class="grid-col-auto">
                  <a href="tel:1-800-555-5555">
                    {{ footer.secondary_section.phone |e }}
                  </a>
                </div>
                <div class="grid-col-auto">
                  <a href="mailto:info@agency.gov">
                    {{ footer.secondary_section.email |e }}
                  </a>
                </div>
              </div>
            </address>
          </div>
        </div>
      {% endblock %}
    </div>
  </div>
</footer>
