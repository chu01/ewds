<form class="ethio-form">
  <legend class="ethio-legend ethio-legend--large">Reset password</legend>
  <fieldset class="ethio-fieldset">
    <legend>Please enter your new password</legend>
    <div class="ethio-alert ethio-alert--info ethio-alert--validation">
      <div class="ethio-alert__body">
        <h3 class="ethio-alert__heading">Password information</h3>
        <p class="ethio-alert__text">
          Length requirements<br>Character constraints, if any
        </p>
      </div>
    </div>

    <label class="ethio-label" for="password-reset">New password</label>
    <input class="ethio-input" id="password-reset" name="password" type="password">

    <label class="ethio-label" for="confirmPassword">Confirm password</label>
    <input class="ethio-input" id="confirmPassword" name="confirmPassword" type="password">

    {% include "@components/_ethio-password/src/ethio-password.twig" with {
      'toggle': {
        'title': 'toggle password',
        'aria_controls': 'password-reset confirmPassword',
        'text': {
          'show': 'Show my typing',
          'hide': 'Hide my typing'
        }
      }
    }
    %}

    <input class="ethio-button" type="submit" value="Reset password">
  </fieldset>
</form>
