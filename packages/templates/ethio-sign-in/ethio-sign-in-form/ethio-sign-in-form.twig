{% set password_id = password.input.id |default('password-sign-in') %}

<form class="ethio-form">
  <fieldset class="ethio-fieldset">
    <legend class="ethio-legend ethio-legend--large">{{ form.legend |default('Access your account') }}</legend>
    {# Email #}
    <label class="ethio-label" for="{{ email.input.id |default('email') }}">
      {{ email.label |default('Email address') }}
    </label>
    <input
      class="ethio-input"
      id="{{ email.input.id |default('email') }}"
      name="{{ email.input.id |default('email') }}"
      type="{{ email.input.type |default('email') }}"
      autocapitalize="off"
      autocorrect="off"
      required
    >
    {# /Email #}
    {# Password #}
    <label class="ethio-label" for="{{ password_id }}">
      {{ password.label |default('Password')}}
    </label>
    <input
      class="ethio-input"
      id="{{ password_id }}"
      name="password"
      type="password"
      required
    >
    {% include "@components/_ethio-password/src/ethio-password.twig" with {
      toggle: password.toggle
    } %}
    {# /Password #}
    <input class="ethio-button" type="submit" value="{{ submit.label |default('Sign in') }}">
    {# Forgot password #}
    <p>
      <a
        href="{{ placeholder_link |default('javascript:void()') }}"
        title="{{ recovery.title |default('Forgot password') }}">
        {{ recovery.label |default('Forgot password?') }}
      </a>
    </p>
    {# /Forgot password #}
  </fieldset>
</form>
