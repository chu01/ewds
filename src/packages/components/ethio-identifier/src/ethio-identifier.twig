{% set placeholder_logo = img_path ~ '/circle-gray-20.svg' %}

<div class="ethio-identifier">
  <section
    class="ethio-identifier__section ethio-identifier__section--masthead"
    aria-label="{{ masthead.aria_label }}">
    <div class="ethio-identifier__container">
      {%- if masthead.parent.logo or masthead.agency.logo -%}
        <div class="ethio-identifier__logos">
          <a href="{{ masthead.parent.url }}" class="ethio-identifier__logo">
            <img
              class="ethio-identifier__logo-img"
              src="{{ masthead.parent.logo|default(placeholder_logo) }}"
              alt="{{ masthead.parent.name |e }} logo"
              role="img">
          </a>
          {%- if masthead.agency.logo %}
            <a href="javascript:void(0);" class="ethio-identifier__logo">
              <img
                class="ethio-identifier__logo-img"
                {% if masthead.agency.logo %}
                src="{{ masthead.agency.logo|default(placeholder_logo) }}"
                {% endif %}
                alt="{{ masthead.agency.name |e }} logo"
                role="img">
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
      <section class="ethio-identifier__identity" aria-label="{{ masthead.description }}">
        <p class="ethio-identifier__identity-domain">{{ domain }}</p>
        <p class="ethio-identifier__identity-disclaimer">
        {% if masthead.content_prefix %}
            <span aria-hidden="true">
              {{ masthead.content_prefix }}
            </span>
          {% endif %}
          {{ masthead.content }}
          <a href="{{ placeholder_link }}">{{ masthead.parent.name |e }}</a>
          {% if masthead.agency.url %}
            {{ (lang == "es") ? "y" : "and" }}
          {% endif %}
          {% if masthead.agency.name or masthead.agency.shortname %}
            {{ (lang == "en") ? "the" : ""}}
          {%- endif %}
          {% if mashead.agency.name or masthead.agency.shortname %}
            <a href="{{ masthead.agency.url | default(placeholder_link) }}">
              {% if masthead.agency.name -%}
                {{ masthead.agency.name |e }}
              {% else %}
                {{ masthead.agency.shortname |e }}
              {%- endif -%}
            </a>
          {% endif %}
          {% if masthead.taxpayer_disclaimer.display %}
          . {{ masthead.taxpayer_disclaimer.content }}
          {%- endif -%}
        </p>
      </section>
    </div>
  </section>
  <nav class="ethio-identifier__section ethio-identifier__section--required-links" aria-label="{{ required_links.aria_label }}">
    <div class="ethio-identifier__container">
      <ul class="ethio-identifier__required-links-list">
        {% for link in required_links.links %}
          <li class="ethio-identifier__required-links-item">
            <a href="{{ link.url }}" class="ethio-identifier__required-link ethio-link">
              {{ link.label }} {{ link.include_shortname ? masthead.parent.shortname |e }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
  {% if ethiogov.display %}
  <section class="ethio-identifier__section ethio-identifier__section--ethiogov" aria-label="{{ ethiogov.aria_label }}">
    <div class="ethio-identifier__container">
      <div class="ethio-identifier__ethiogov-description">{{ ethiogov.description }}</div>
      <a href="{{ ethiogov.link.url }}" class="ethio-link">{{ ethiogov.link.label }}</a>
    </div>
  </section>
  {% endif -%}
</div>
