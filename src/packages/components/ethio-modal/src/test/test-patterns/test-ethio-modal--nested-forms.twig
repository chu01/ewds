{% set close_icon %}
  <svg class="ethio-icon" aria-hidden="true" focethioble="false" role="img">
    <use href="./img/sprite.svg#{{ close_button.icon_type | default("close") }}"></use>
  </svg>
{% endset %}

<div class="margin-y-3">
  <a href="#{{ id }}" class="ethio-button" aria-controls="{{ id }}" data-open-modal>{{ trigger.text }}</a>
  <div class="ethio-modal {{ modifier }}" id="{{ id }}" aria-labelledby="{{ header.id }}" aria-describedby="{{ describedby }}">
    <div class="ethio-modal__content">
      <div class="ethio-modal__main">
        <h2 class="ethio-modal__heading" id="{{ header.id }}">
          {{ header.text }}
        </h2>
        <div class="ethio-prose">
          <p id="{{ description.id }}">{{ description.text }}</p>

          <div class="ethio-form-group">
            <label class="ethio-label" id="appointment-date-label-modal" for="appointment-date-modal"
              >Appointment date</label
            >
            <div class="ethio-hint" id="appointment-date-hint">mm/dd/yyyy</div>
            <div class="ethio-date-picker">
              <input
                class="ethio-input"
                id="appointment-date-modal"
                name="appointment-date"
                aria-labelledby="appointment-date-label-modal"
                aria-describedby="appointment-date-hint"
              />
            </div>
          </div>

          <label class="ethio-label" for="CB-modal">Combobox</label>
          <div class="ethio-combo-box">
            <select class="ethio-select" name="modal-cb" id="CB-modal">
              <option value>Combo a Box</option>
              <option value="combo">Combo</option>
              <option value="box">Box</option>
              <option value="combo-box">Combobox</option>
            </select>
          </div>
          <div class="margin-y-3"></div>
        </div>
        <div class="ethio-modal__footer">
          <ul class="ethio-button-group">
            {% for action in footer -%}
              <li class="ethio-button-group__item">
                <button type="button" class="{{ action.class | default("ethio-button") }}" data-close-modal>{{ action.text }}</button>
              </li>
            {% endfor -%}
          </ul>
        </div>
      </div>
      <button type="button" class="ethio-button ethio-modal__close" aria-label="{{ close_button.aria_label }}" data-close-modal>
          {{ close_icon | raw }}
      </button>
    </div>
  </div>
</div>
